
.new
  .new__content
    .new__content__header
      =render"layouts/header"

    .new__content__main
      .new__content__main__childrens
        %h2 商品の情報を入力
      = form_with model: @product, class: "form", id: "product-form" do |f|
        .form-image
          .form-image__title
            %label 出品画像
            %span 必須
            .form-image__text 最大10枚までアップロードできま
            .clearfix
              - @itemss.images.each do |image|
                = image_tag image.image.url, size: '300x300'            
                %ul#previews
                  = f.fields_for :images do |image|
                    - @itemss.images.each_with_index do |img, i|
                      %li.image-preview
                        %label.upload-label{style:"display: none;"}


 
        .new__content__main__childrens__items
          .new__content__main__childrens__items__box
            .new__content__main__childrens__items__box__box1
              %p.item__text
              商品名 
              %span
                必須
              %br/
              = f.text_field  :name,  placeholder: "40文字まで", type: "text"
                
            .new__content__main__childrens__items__box__box2
              %p.item__text
                商品の説明
                %span
                  必須
              = f.text_area :explain,class:"textarea"
          
        .new__content__main__childrens__categories
          .new__content__main__childrens__categories__box
            .new__content__main__childrens__categories__box__box1
              商品の詳細
            .new__content__main__childrens__categories__box__box2
              カテゴリー 必須
              %br/
              %select#categorie{name: "categories",class:"categorie"}        
                %option{value:  "categorie1"} レディース
                %option{value: "categorie2"} メンズ
                %option{value: "categorie3"} 日用品
                %option{value: "categorie4"} インテリア
                %option{value: "categorie5"} その他
              %br/

              -# =form.select :region,pleaceholder: "",class:"categorie"  
              -# =form.select :condition,pleaceholder: "",class:"categorie_1" 
              -# =form.select :shipping,pleaceholder: "",class:"categorie_1" 
              -# %option{value: "categorie_11"} トップス
              -# %option{value: "categorie_22"} ジャケットアウター
              -# %option{value: "categorie_33"} パンツ
              -# %option{value: "categorie_44"} スカート
              -# %option{value: "categorie_55"} ワンピース
              -# %br/

              %select#categorie_2{name:  "categories_2",class:"categorie_2"}        
                %option{value: "categorie_11"} tシャツ
                %option{value: "categorie_22"} ブラウス
                %option{value: "categorie_33"} キャミソール
                %option{value: "categorie_44"} タンクトップ
                %option{value:"categorie_55"} その他
              %br/
            .new__content__main__childrens__categories__box__box3
              ブランド
              %br/
              = f.text_field  :brand,name: "brnd", placeholder:"", type: "text",class:"brnd"
              
            .new__content__main__childrens__categories__box__box4
              商品の状態 必須
              %br/
              = f.select(:condition, [["新品、未使用", "新品、未使用"], ["未使用に近い", "未使用に近い"],["目立った傷や汚れがあり","目立った傷や汚れがあり"],["やや傷や汚れがあり","やや傷や汚れがあり"],["その他","その他"]], {prompt:"選択してください"}, {class: "condition"})
              
        .new__content__main__childrens__deliverys
          .new__content__main__childrens__deliverys__box
            .new__content__main__childrens__deliverys__box__box1
              配送について
            .new__content__main__childrens__deliverys__box__box2
              配送料の負担 必須
              %br/
              = f.select(:postage, [["送料込み", "送料込み"], ["着払い", "着払い"]], {prompt:"選択してください"}, {class: "contribution"})
            -# .new__content__main__childrens__deliverys__box__box5
            -#   発送までの日数 必須
            -#   = form.select(:shipping, [["未定", "未定"], ["ラクマフリマ便", "ラクマフリマ便"],["ゆうメール","ゆうメール"],["レターパック","レターパック"]], {prompt:"選択してください"}, {class: "date"})
              -# = form.select(:shipping, [["未定", "未定"], ["ラクマフリマ便", "ラクマフリマ便"],["ゆうメール","ゆうメール"],["レターパック","レターパック"]], {prompt:"選択してください"}, {class: "date"})
              -# %select#date{name: "date",class:"date"}        
              -#   %option{value: "condition1"} 未定
              -#   %option{value: "condition2"} ラクラクフリマ便
              -#   %option{value: "condition3"} ゆうメール
              -#   %option{value: "condition4"} レターパック
            .new__content__main__childrens__deliverys__box__box3
              %br/
              = f.select(:shipping, [["１〜２日で発送", "１〜２日で発送"], ["2〜3日で発送", "2〜3日で発送"],["4〜7日で発送","4〜7日で発送"]] ,{prompt:"選択してください"}, {class: "delivery"})
            .new__content__main__childrens__deliverys__box__box4
              =f.label :region_id,"配送の地域"
              %br/
              = f.select :region, options_for_select(@prefectures.map{|c|[c[:name], c[:name]]}), {prompt:"選択してください"}, {class: "area"}
            
        .new__content__main__childrens__sale
          .new__content__main__childrens__sale__box
            =f.label :price,"価格" 
            .new__content__main__childrens__sale__box__box1
              .flex
                %p.left
                  販売価格(300~9,999,999) 必須
                %p.rigth
                  ¥
                
              
              =f.number_field :price, placeholder: "", type: "number",class:"price"
              
            .new__content__main__childrens__sale__box__box2
              %p.left
                販売手数料 (10%)
              %p.rigth
                ー
            .new__content__main__childrens__sale__box__box3
              .new__content__main__childrens__sale__box__box3__top
                %p.left
                  販売利益
                %p.rigth
                  ー
              .new__content__main__childrens__sale__box__box3__middle
                .new__content__main__childrens__sale__box__box3__middle__buttn1
                  = f.submit "変更する", class:"submit"
                .new__content__main__childrens__sale__box__box3__middle__buttn2 
                  = link_to("出品物を削除","item_path(item)" ,class: "back", method: :delete) 
              .new__content__main__childrens__sale__box__box3__bottom
                %p
                  禁止されている行為および出品物を必ずご確認ください。偽ブランド品や盗品物などの販売は犯罪であり、法律により処罰される可能性があります。 また、出品をもちまして加盟店規約に同意したことになります。

    .new__content__footer
      =render"layouts/footer_usr"
