.new
  .new__content
    .new__content__header
      .new__content__header__text
        =link_to image_tag(src="logo.png", size:'190x70'),root_path

    .new__content__main
      .new__content__main__childrens
      = form_with(model: @item)do |form|
        .new__content__main__childrens__imges
          .new__content__main__childrens__imges__box
            出品アイテム
            %span.form-require 必須
            -# %br/
            -# 最大10枚までアップロード可能
            #image-box
              #previews
                -if @item.persisted?
                  =@item.images.each_with_index do |image, i|
                    =image_tag image.src.url,data:{index:i},width:"100",height:'100'
              = form.fields_for :images do |t|
                #form-wrapper
                  %label.icons
                    = icon( 'fas',"fas fa-camera", class: "icon")
                    %p.text
                      アルバムから画像を選択
                      %br/
                      【最大10枚までアップロード可能】
                      %br/
                      %br/
                      ファイル形式：JPEG,PNG,GIF
                  .js-file_group{"data-index" => "#{t.index}"}
                    = t.file_field :image,type: "file" ,class:"abc",value:"textarea"
                    - if @item.persisted?
                      =image.check_box :destroy,data:{index:t.index},class:"hidden-destroy"
                  - if @item.persisted?
                    .js-file_group{"data-index"=>"#{@item.images.count}"}
                      = file_field_tag :image, name: "item[images_attributes][#{@t.images.count}][:image]", class: 'abc'
                      .js-remove 削除


        .new__content__main__childrens__items
          .new__content__main__childrens__items__box
            .new__content__main__childrens__items__box__box1
              %p.item__text
              商品名 
              %span.form-require 必須
              %br/
              = form.text_field  :name, placeholder: "40文字まで", type: "text"
                
              %br/
              %br/
              -# %p.item__text-color
              -# 入力してください
            .new__content__main__childrens__items__box__box2
              %p.item__text
                商品の説明
                %span.form-require 必須
              = form.text_area :explain,class:"textarea", placeholder: "入力してください"
              %br/
              %br/
              -# 入力してください
              

          
        .new__content__main__childrens__categories
          .new__content__main__childrens__categories__box
            .new__content__main__childrens__categories__box__box1
              商品の詳細
            .new__content__main__childrens__categories__box__box2

              .listing-product-detail__category
                = form.label 'カテゴリー', class: 'category-label'
                %span.listing-default--require 必須
                .listing-select-wrapper__box
                  = form.select :category, @category_parent_array, {}, {class: 'listing-select-wrapper__box--select', id: 'parent_category'}


            .new__content__main__childrens__categories__box__box3
              ブランド
              %br/
              = form.text_field  :brand,name: "brnd", placeholder:"", type: "text",class:"brnd"
            .new__content__main__childrens__categories__box__box4
              商品の状態
              %span.form-require 必須
              %br/
              = form.select(:condition, [["新品、未使用", "新品、未使用"], ["未使用に近い", "未使用に近い"],["やや目立った傷や汚れあり","やや目立った傷や汚れあり"],["傷や汚れあり","傷や汚れあり"],["その他","その他"]], {prompt:"選択してください"}, {class: "condition"})
              

        .new__content__main__childrens__deliverys
          .new__content__main__childrens__deliverys__box
            .new__content__main__childrens__deliverys__box__box1
              配送について
            .new__content__main__childrens__deliverys__box__box2
              配送料の負担 
              %span.form-require 必須
              %br/

              = form.select(:postage, [["送料込み", "送料込み"], ["着払い", "着払い"]], {prompt:"選択してください"}, {class: "contribution"})

            .new__content__main__childrens__deliverys__box__box3
              配送の日数
              %span.form-require 必須
              %br/
              = form.select(:shipping, [["1〜2日で発送", "1〜2日で発送"], ["2〜3日で発送", "2〜3日で発送"],["4〜7日で発送","4〜7日で発送"]] ,{prompt:"選択してください"}, {class: "delivery"})
            .new__content__main__childrens__deliverys__box__box4
              配送の地域 
              %span.form-require 必須
              -# 必須
              %br/
              = form.select :region, options_for_select(@prefectures.map{|c|[c[:name], c[:name]]}), {prompt:"選択してください"}, {class: "area"} 
            
        .new__content__main__childrens__sale
          .new__content__main__childrens__sale__box
            出品価格
            %span.form-require 必須
            %span.form-require3 半角
            .new__content__main__childrens__sale__box__box1
              .flex
                %p.left
                  -# 販売価格
                  ¥300-¥9,999,999 の範囲で
                  %br/
                  入力してください
                %p.rigth
                  ¥
              =form.number_field :price, placeholder: "", type: "number",class:"price"


            .new__content__main__childrens__sale__box__box3__middle
              .new__content__main__childrens__sale__box__box3__middle__buttn1
                =form.submit name: "submit", class:"submit", value: "送信"
              .new__content__main__childrens__sale__box__box3__middle__buttn2 
                = link_to("戻る","#" ,class: "back") 
            .new__content__main__childrens__sale__box__box3__bottom
              %p
                禁止されている行為および出品物を必ずご確認ください。偽ブランド品や盗品物などの販売は犯罪であり、法律により処罰される可能性があります。 また、出品をもちまして加盟店規約に同意したことになります。

              
            -# .new__content__main__childrens__sale__box__box2
            -#   %p.left
            -#     販売手数料 (10%)
            -#   %p.rigth
            -#     ー
            -# .new__content__main__childrens__sale__box__box3
            -#   .new__content__main__childrens__sale__box__box3__top
            -#     %p.left
            -#       販売利益
            -#     %p.rigth
            -#       ー

    .new__content__footer
      .new__content__footer__list
        %ul
          %li
            プライバシーポリシー
          %li
            メルカリ利用規約
          %li
            特定商取引に関する表記

      .new__content__footer__image
        .new__content__footer__image__box
          =link_to image_tag(src="logo.png", size:'140x41'),root_path


